<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_margin="20sp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="50sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center_vertical"
                        android:paddingEnd="20sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:paddingStart="20sp"
                        android:text="Send an Email"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/emailavailability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="end"
                        android:paddingEnd="20sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:paddingStart="20sp"
                        android:text="Unavailable"
                        android:textColor="#F44336"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/header1"
                android:background="#99000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/buttonpanel"
                android:layout_below="@+id/header1">

                <TextView
                    android:id="@+id/emailarea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:text="You must set the Email first in order to connect to the client."
                    android:textColor="#99000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonpanel"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/buttonpanel1"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_alignParentBottom="true"
                    android:background="#4CAF50"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/sendemail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:text="SEND EMAIL"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/setemailparent"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/enteremail"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/chatmod"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="Set an email first"
                        android:inputType="text"
                        android:paddingEnd="10sp"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:paddingStart="10sp"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/setemail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20sp"
                        android:layout_marginRight="20sp"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_menu_send" />

                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_marginEnd="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginStart="20sp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header2"
                android:layout_width="match_parent"
                android:layout_height="50sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center_vertical"
                        android:paddingEnd="20sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:paddingStart="20sp"
                        android:text="Place a Call"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mobileavailability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="end"
                        android:paddingEnd="20sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:paddingStart="20sp"
                        android:text="Unavailable"
                        android:textColor="#F44336"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/header2"
                android:background="#99000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/another"
                android:layout_below="@+id/header2">

                <TextView
                    android:id="@+id/callarea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:text="You must set the number first in order to connect to the client."
                    android:textColor="#99000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/another"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/buttonpanel2"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_alignParentBottom="true"
                    android:background="#4CAF50"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/placecall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:text="PLACE CALL"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/setmobileparent"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/entermobile"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/chatmod"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="Set a number first"
                        android:inputType="text"
                        android:paddingEnd="10sp"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:paddingStart="10sp"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/setmobile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20sp"
                        android:layout_marginRight="20sp"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_menu_send" />

                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>